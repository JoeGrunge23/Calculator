<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/numberField"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/groupOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberField">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="1dp"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_centerInParent="true"

            android:layout_toRightOf="@+id/seven"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="100dp"
            android:layout_height="150dp"
            
            android:layout_margin="1dp"
            android:layout_toEndOf="@+id/eight"
            android:text="9" />

        <Button
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toEndOf="@+id/nine"
            android:text="+" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/six"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:text="6" />

        <Button
            android:id="@+id/five"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/six"
            android:text="5" />

        <Button
            android:id="@+id/four"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/five"
            android:text="4" />

        <Button
            android:id="@+id/minus"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/four"
            android:text="-" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toEndOf="@+id/one"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toEndOf="@+id/two"
            android:text="3" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/three"
            android:text="*" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <Button
            android:id="@+id/dot"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:text="." />

        <Button
            android:id="@+id/zero"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/dot"
            android:text="0" />

        <Button
            android:id="@+id/equals"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/zero"
            android:text="=" />

        <Button
            android:id="@+id/division"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/equals"
            android:text="/" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/groupFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/groupFour"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <Button
            android:id="@+id/equals"
            android:layout_width="202dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:text="=" />

        <Button
            android:id="@+id/delete"
            android:layout_width="202dp"
            android:layout_height="150dp"
            android:layout_margin="1dp"
            android:layout_toRightOf="@+id/equals"
            android:text="DEL" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>